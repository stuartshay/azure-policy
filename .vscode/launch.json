{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Azure Functions: Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "azure_functions_worker.main",
      "args": [
        "--host",
        "127.0.0.1",
        "--port",
        "9091",
        "--worker-id",
        "1"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/functions/basic",
      "env": {
        "AzureWebJobsScriptRoot": "${workspaceFolder}/functions/basic",
        "AzureFunctionsJobHost__Logging__Console__IsEnabled": "true"
      },
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/functions/basic",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Test Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/functions/basic",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Debug All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Debug Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Debug Policy Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/policies",
        "-v",
        "-m",
        "policy"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Debug Integration Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/integration",
        "-v",
        "-m",
        "integration"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Python: Debug Tests with Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests",
        "-v",
        "--cov=.",
        "--cov-report=term-missing"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/functions/basic/.venv/bin/python"
    },
    {
      "name": "Attach to Python Functions",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 9091
      },
      "preLaunchTask": "func: host start"
    }
  ]
}
