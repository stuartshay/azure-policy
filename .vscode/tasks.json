{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Azure Functions",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source .venv/bin/activate && func start --python"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      },
      "problemMatcher": [],
      "dependsOn": [
        "Activate Python Environment"
      ]
    },
    {
      "label": "Activate Python Environment",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cd functions/basic && python3 -m venv .venv || echo 'Virtual environment already exists'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Azurite",
      "type": "shell",
      "command": "azurite",
      "args": [
        "--silent",
        "--location",
        "${workspaceFolder}/azurite-data",
        "--debug",
        "${workspaceFolder}/azurite-data/debug.log"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Install Python Dependencies",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      },
      "problemMatcher": [],
      "dependsOn": [
        "Activate Python Environment"
      ]
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source functions/basic/.venv/bin/activate && python -m pytest tests/ -v --tb=short"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Tests with Coverage",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source functions/basic/.venv/bin/activate && python -m pytest tests/ -v --cov=. --cov-report=term-missing --cov-report=html:htmlcov"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Policy Tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source functions/basic/.venv/bin/activate && python -m pytest tests/policies/ -v -m policy"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Integration Tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source functions/basic/.venv/bin/activate && python -m pytest tests/integration/ -v -m integration"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Infrastructure Tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source functions/basic/.venv/bin/activate && python -m pytest tests/infrastructure/ -v -m infrastructure"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Function Tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source .venv/bin/activate && python -m pytest tests/ -v"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      },
      "problemMatcher": []
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "black",
      "args": [
        "."
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint Code",
      "type": "shell",
      "command": "pylint",
      "args": [
        "function_app.py"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      },
      "problemMatcher": []
    },
    {
      "label": "Create Virtual Environment",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "venv",
        ".venv"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      },
      "problemMatcher": []
    },
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-python-watch",
      "isBackground": true,
      "dependsOn": "pip install (functions)",
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      }
    },
    {
      "label": "pip install (functions)",
      "type": "shell",
      "osx": {
        "command": "${config:azureFunctions.pythonVenv}/bin/python -m pip install -r requirements.txt"
      },
      "windows": {
        "command": "${config:azureFunctions.pythonVenv}/Scripts/python -m pip install -r requirements.txt"
      },
      "linux": {
        "command": "${config:azureFunctions.pythonVenv}/bin/python -m pip install -r requirements.txt"
      },
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/functions/basic"
      }
    }
  ]
}
